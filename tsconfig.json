{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "es2018"
        ],
        "module": "commonjs",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "out",
        "plugins": [
            {
                "ignoreDefinitionFiles": true,
                "name": "tslint-language-service"
            }
        ],
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "target": "es2018"
    }
}
